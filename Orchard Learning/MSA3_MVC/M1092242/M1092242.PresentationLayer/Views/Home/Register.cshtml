@model M1092242.Entities.User

@{
    ViewBag.Title = "Register";
}

<div class="form">
    <h2 class="form-heading">Register Here</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-container">
            @Html.LabelFor(model => model.ServiceCenterId, "Select Service Center")
            @Html.DropDownListFor(model => model.ServiceCenterId, new List<SelectListItem>() { new SelectListItem() { Text = "Select Service Center", Value = "" }, new SelectListItem() { Text = "Service Center One", Value = "1" }, new SelectListItem() { Text = "Service Center Two", Value = "2" } }, new { @class = "input drop-down" })
            @Html.ValidationMessageFor(model => model.ServiceCenterId, "", new { @class = "text-danger" })
        </div>

        <div class="input-container">
            @Html.LabelFor(model => model.Name, "Name")
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="input-container">
            @Html.LabelFor(model => model.ContactNumber, "Contact Number")

            @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "input" } })
            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
        </div>

        <div class="input-container">
            @Html.LabelFor(model => model.Adress, "Address")

            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "input", @type = "textarea" } })
            @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })

        </div>

        <div class="input-container">
            @Html.LabelFor(model => model.AppointmentBookingDate, "Booking Date")

            @Html.TextBoxFor(model => model.AppointmentBookingDate, new { @class = "input", @type = "date" })
            @Html.ValidationMessageFor(model => model.AppointmentBookingDate, "", new { @class = "text-danger" })
        </div>


        <div class="input-container">
            @Html.LabelFor(model => model.LaptopMake, "Laptop Make")

            @Html.EditorFor(model => model.LaptopMake, new { htmlAttributes = new { @class = "input" } })
            @Html.ValidationMessageFor(model => model.LaptopMake, "", new { @class = "text-danger" })

        </div>

        <div class="input-container">
            @Html.LabelFor(model => model.LaptopModel, "Laptop Model")

            @Html.EditorFor(model => model.LaptopModel, new { htmlAttributes = new { @class = "input" } })
            @Html.ValidationMessageFor(model => model.LaptopModel, "", new { @class = "text-danger" })
        </div>


        <p class="success">@ViewBag.Success</p>
        <p class="error">@ViewBag.Error</p>


        <div class="button-container">
            <input type="submit" value="Register" class="btn register-submit" />
        </div>

    }


    <div>
        @Html.ActionLink("<< Go back", "Index", "Home", new { area = "" }, new { @class = "nav-back" })
    </div>

</div>


